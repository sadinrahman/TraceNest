@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TraceNest Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        :root {
            --sidebar-bg: #4a5265;
            --sidebar-hover: #3a4050;
            --sidebar-active: #323845;
            --main-bg: #1e2432;
            --card-bg: #f8f9fc;
            --primary-color: #4e73df;
            --found-color: #36b9cc;
            --lost-color: #f75de2;
            --matched-color: #4285f4;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--main-bg);
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }

        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            width: 250px;
            background-color: var(--sidebar-bg);
            padding-top: 20px;
            transition: all 0.3s;
            z-index: 1000;
        }

        .sidebar-header {
            padding: 10px 15px 20px;
            color: #fdb701;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            margin-bottom: 20px;
        }

            .sidebar-header i {
                margin-right: 10px;
            }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .sidebar-menu li {
                margin-bottom: 5px;
            }

            .sidebar-menu a {
                display: flex;
                align-items: center;
                padding: 12px 15px;
                color: white;
                text-decoration: none;
                transition: all 0.3s;
                font-size: 0.9rem;
            }

                .sidebar-menu a:hover {
                    background-color: var(--sidebar-hover);
                }

                .sidebar-menu a.active {
                    background-color: var(--sidebar-active);
                    border-left: 4px solid #fdb701;
                }

            .sidebar-menu i {
                margin-right: 10px;
                width: 20px;
                text-align: center;
            }

        .main-content {
            margin-left: 250px;
            padding: 20px;
            transition: all 0.3s;
        }

        .card {
            border-radius: 10px;
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            margin-bottom: 20px;
            background-color: var(--card-bg);
        }

        .card-header {
            background-color: white;
            border-bottom: 1px solid #e3e6f0;
            border-top-left-radius: 10px !important;
            border-top-right-radius: 10px !important;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card-body {
            padding: 20px;
        }

        .dropdown-toggle::after {
            display: none;
        }

        .stat-circle {
            width: 70px;
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            font-size: 1.5rem;
            font-weight: bold;
            color: white;
        }

        .circle-lost {
            background-color: var(--lost-color);
        }

        .circle-found {
            background-color: var(--found-color);
        }

        .circle-matched {
            background-color: var(--matched-color);
        }

        /* Responsive adjustments */
        @@media (max-width: 991.98px) {
            .sidebar

        {
            width: 70px;
            overflow: hidden;
        }

        .sidebar-header span, .sidebar-menu span {
            display: none;
        }

        .sidebar-menu a {
            padding: 15px;
            justify-content: center;
        }

        .sidebar-menu i {
            margin-right: 0;
            font-size: 1.2rem;
        }

        .main-content {
            margin-left: 70px;
        }

        }

        @@media (max-width: 767.98px) {
            .main-content

        {
            margin-left: 0;
            padding: 15px;
        }

        .sidebar {
            transform: translateX(-100%);
        }

            .sidebar.active {
                transform: translateX(0);
                width: 250px;
            }

                .sidebar.active .sidebar-header span,
                .sidebar.active .sidebar-menu span {
                    display: inline;
                }

                .sidebar.active .sidebar-menu a {
                    padding: 12px 15px;
                    justify-content: flex-start;
                }

                .sidebar.active .sidebar-menu i {
                    margin-right: 10px;
                }

        .toggle-btn {
            display: block !important;
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 1001;
        }

        }

        .toggle-btn {
            display: none;
            background-color: var(--sidebar-bg);
            color: white;
            border: none;
            border-radius: 4px;
            padding: 6px 10px;
        }

        /* Progress Circle */
        .progress-circle {
            position: relative;
            width: 200px;
            height: 200px;
            margin: 0 auto;
        }

            .progress-circle svg {
                transform: rotate(-90deg);
            }

            .progress-circle circle {
                fill: none;
                stroke-width: 15;
            }

        .circle-bg {
            stroke: #e0e5f2;
        }

        .circle-progress {
            stroke: var(--lost-color);
            stroke-linecap: round;
            transition: stroke-dashoffset 0.5s ease;
        }

        .progress-text {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 2.5rem;
            font-weight: bold;
            color: #333;
        }

        @@media (max-width: 991.98px) {
            .sidebar {
                width: 70px;
                overflow: hidden;
            }

            .sidebar-header span, .sidebar-menu span {
                display: none;
            }

            .sidebar-menu a {
                padding: 15px;
                justify-content: center;
            }

            .sidebar-menu i {
                margin-right: 0;
                font-size: 1.2rem;
            }

            .main-content {
                margin-left: 70px;
            }
        }

        @@media (max-width: 767.98px) {
            .main-content {
                margin-left: 0;
                padding: 15px;
            }

            .sidebar {
                transform: translateX(-100%);
            }

                .sidebar.active {
                    transform: translateX(0);
                    width: 250px;
                }

                    .sidebar.active .sidebar-header span,
                    .sidebar.active .sidebar-menu span {
                        display: inline;
                    }

                    .sidebar.active .sidebar-menu a {
                        padding: 12px 15px;
                        justify-content: flex-start;
                    }

                    .sidebar.active .sidebar-menu i {
                        margin-right: 10px;
                    }

            .toggle-btn {
                display: block !important;
                position: fixed;
                top: 15px;
                left: 15px;
                z-index: 1001;
            }
        }

        .toggle-btn {
            display: none;
            background-color: var(--sidebar-bg);
            color: white;
            border: none;
            border-radius: 4px;
            padding: 6px 10px;
        }
    </style>
</head>
<body>
    <!-- Mobile Toggle Button -->
    <button class="toggle-btn" id="sidebarToggle">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <i class="fas fa-cube"></i>
            <span>Admin panel</span>
        </div>
        <ul class="sidebar-menu">
            <li>
                <a href="@Url.Action("Index", "Admin")">
                    <i class="fas fa-th-large"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("UserDetails", "Admin")">
                    <i class="fas fa-user"></i>
                    <span>User details</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("LostProducts", "Admin")">
                    <i class="fas fa-search"></i>
                    <span>Lost Products</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("FoundProducts", "Admin")">
                    <i class="fas fa-box"></i>
                    <span>Found Products</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fas fa-exchange-alt"></i>
                    <span>Matched Products</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Muncipality", "Admin")">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>Municipality</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Category", "Admin")">
                    <i class="fas fa-tags"></i>
                    <span>Category</span>
                </a>
            </li>
        </ul>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container-fluid">
            <!-- Top Cards -->
            <div class="row mb-4">
                <!-- Users Who Posted Chart -->
                <div class="col-lg-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h6 class="m-0 font-weight-bold">Users Who Posted</h6>
                        </div>
                        <div class="card-body d-flex align-items-center justify-content-center">
                            <div class="progress-circle">
                                <svg width="200" height="200" viewBox="0 0 200 200">
                                    <circle class="circle-bg" cx="100" cy="100" r="90" />
                                    <circle class="circle-progress" cx="100" cy="100" r="90"
                                            stroke-dasharray="565.48" stroke-dashoffset="118.75" /> <!-- 565.48 is approx 2π*90, and 118.75 is (1-0.79)*565.48 -->
                                </svg>
                                <div class="progress-text">20%</div>
                            </div>
                        </div>
                    </div>
                </div>

                
            </div>

            <!-- Bottom Stat Cards -->
            <div class="row">
                <!-- Lost Products Stat -->
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase text-muted mb-1">Lost Products</h6>
                                
                            </div>
                            <div class="stat-circle circle-lost">210</div>
                        </div>
                    </div>
                </div>

                <!-- Found Products Stat -->
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase text-muted mb-1">Found Product</h6>
                               
                            </div>
                            <div class="stat-circle circle-found">150</div>
                        </div>
                    </div>
                </div>

                <!-- Matched Products Stat -->
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase text-muted mb-1">Founded Products</h6>
                                
                            </div>
                            <div class="stat-circle circle-matched">98</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
   
</body>
</html>