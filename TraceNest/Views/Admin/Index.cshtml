@{
    Layout = null;
}
@model TraceNest.Dto.DashboardDto
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TraceNest Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-dark: #1e2432;
            --sidebar-dark: #383f53;
            --text-light: #ffffff;
            --pink: yellowgreen;
            --blue: #4c8df5;
            --cyan: #42c6d6;
        }

        body {
            background-color: var(--primary-dark);
            color: var(--text-light);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            background-color: var(--sidebar-dark);
            height: 100vh;
            position: fixed;
            padding-top: 20px;
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
            z-index: 100;
            width: 250px;
        }

        .sidebar-header {
            padding: 0 20px 20px 20px;
            font-size: 1.2rem;
            font-weight: bold;
        }

            .sidebar-header i {
                margin-right: 10px;
            }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .sidebar-menu a {
                display: block;
                padding: 12px 20px;
                color: var(--text-light);
                opacity: 0.8;
                transition: all 0.3s;
                border-left: 4px solid transparent;
                text-decoration: none;
            }

                .sidebar-menu a.active, .sidebar-menu a:hover {
                    background-color: rgba(255,255,255,0.1);
                    opacity: 1;
                    border-left: 4px solid var(--pink);
                }

                .sidebar-menu a i {
                    width: 24px;
                    text-align: center;
                    margin-right: 8px;
                }

        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        .card {
            background-color: #2d334a;
            border: none;
            border-radius: 10px;
            margin-bottom: 20px;
            transition: transform 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .circle-wrapper {
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 200px;
        }

        .progress-circle {
            width: 160px;
            height: 160px;
            border-radius: 50%;
            background: conic-gradient(var(--pink) 0% 20%, #ddd 20% 100%);
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .progress-circle::before {
                content: "";
                position: absolute;
                width: 130px;
                height: 130px;
                border-radius: 50%;
                background: #2d334a;
            }

        .percentage {
            position: relative;
            font-size: 40px;
            font-weight: bold;
            z-index: 2;
        }

        .stats-card {
            padding: 30px;
            position: relative;
            overflow: hidden;
        }

        .stats-value {
            font-size: 2.5rem;
            font-weight: bold;
            color: var(--text-light);
            position: relative;
            z-index: 2;
        }

        .stats-title {
            font-size: 1.2rem;
            color: var(--text-light);
            opacity: 0.8;
            text-transform: uppercase;
            letter-spacing: 1px;
            position: relative;
            z-index: 2;
        }

        .circle-indicator {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            position: absolute;
            right: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 28px;
            font-weight: bold;
            color: #fff;
        }

        .pink-bg {
            background-color: var(--pink);
        }

        .blue-bg {
            background-color: var(--blue);
        }

        .cyan-bg {
            background-color: var(--cyan);
        }

        .admin-title {
            color: #f3a33e;
            font-weight: bold;
        }

        @@media (max-width: 992px) {
            .sidebar

        {
            width: 70px;
            overflow: hidden;
        }

        .sidebar-menu a span {
            display: none;
        }

        .sidebar-menu a i {
            margin-right: 0;
            font-size: 20px;
        }

        .main-content {
            margin-left: 70px;
        }

        }

        @@media (max-width: 768px) {
            .main-content

        {
            margin-left: 0;
            padding-top: 70px;
        }

        .sidebar {
            width: 100%;
            height: auto;
            position: fixed;
            bottom: 0;
            left: 0;
            padding: 0;
            display: flex;
            justify-content: space-around;
            z-index: 1000;
        }

        .sidebar-menu {
            display: flex;
            width: 100%;
            justify-content: space-around;
        }

        .sidebar-header {
            display: none;
        }

        .sidebar-menu a {
            padding: 10px;
            text-align: center;
            border-left: none;
            border-top: 3px solid transparent;
        }

            .sidebar-menu a.active, .sidebar-menu a:hover {
                border-left: none;
                border-top: 3px solid var(--pink);
            }

            .sidebar-menu a span {
                display: none;
            }

        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <aside class="sidebar">
                <div class="sidebar-header">
                    <i class="fas fa-cube"></i>
                    <span>Admin panel</span>
                </div>
                <ul class="sidebar-menu">
                    <li>
                        <a href="@Url.Action("Index", "Admin")" class="active">
                            <i class="fas fa-th-large"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("UserDetails", "Admin")">
                            <i class="fas fa-user"></i>
                            <span>User details</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("LostProducts", "Admin")">
                            <i class="fas fa-search"></i>
                            <span>Lost Products</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("FoundProducts", "Admin")">
                            <i class="fas fa-box"></i>
                            <span>Found Products</span>
                        </a>
                    </li>
                   
                    <li>
                        <a href="@Url.Action("Muncipality", "Admin")">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>Municipality</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Category", "Admin")" >
                            <i class="fas fa-tags"></i>
                            <span>Category</span>
                        </a>
                    </li>
                </ul>
            </aside>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 main-content">
                <div class="container-fluid">
                    <!-- User Activity Card -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title mb-4">Users Who Posted</h5>
                                    <div class="circle-wrapper">
                                        <div class="progress-circle">
                                            <div class="percentage">80</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Stats Cards -->
                    <div class="row">
                        <!-- Lost Products -->
                        <div class="col-md-4 mb-4">
                            <div class="card stats-card">
                                <div class="stats-title">LOST PRODUCTS</div>
                                <div class="stats-value mt-2">@Model.LostItemsCount</div>
                                <div class="circle-indicator pink-bg">
                                    <i class="fas fa-search"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Found Products -->
                        <div class="col-md-4 mb-4">
                            <div class="card stats-card">
                                <div class="stats-title">FOUND PRODUCT</div>
                                <div class="stats-value mt-2">@Model.FoundItemsCount</div>
                                <div class="circle-indicator cyan-bg">
                                    <i class="fas fa-box-open"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Founded Products -->
                        <div class="col-md-4 mb-4">
                            <div class="card stats-card">
                                <div class="stats-title">FOUNDED PRODUCTS</div>
                                <div class="stats-value mt-2">@Model.FoundItemsCount</div>
                                <div class="circle-indicator blue-bg">
                                    <i class="fas fa-check-circle"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Stats Based on DashboardDto -->
                    <div class="row">
                        <!-- Users Count -->
                        <div class="col-md-6 col-lg-3 mb-4">
                            <div class="card stats-card">
                                <div class="stats-title">USERS</div>
                                <div class="stats-value mt-2 users-count">@Model.UsersCount</div>
                                <div class="circle-indicator blue-bg">
                                    <i class="fas fa-users"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Categories Count -->
                        <div class="col-md-6 col-lg-3 mb-4">
                            <div class="card stats-card">
                                <div class="stats-title">CATEGORIES</div>
                                <div class="stats-value mt-2 categories-count">@Model.CategoriesCount</div>
                                <div class="circle-indicator pink-bg">
                                    <i class="fas fa-tags"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Municipalities Count -->
                        <div class="col-md-6 col-lg-3 mb-4">
                            <div class="card stats-card">
                                <div class="stats-title">MUNICIPALITIES</div>
                                <div class="stats-value mt-2 municipalities-count">@Model.MunicipalitiesCount</div>
                                <div class="circle-indicator cyan-bg">
                                    <i class="fas fa-city"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap and other scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // Handle active menu items
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarItems = document.querySelectorAll('.sidebar-menu a');
            sidebarItems.forEach(item => {
                item.addEventListener('click', function() {
                    sidebarItems.forEach(i => i.classList.remove('active'));
                    this.classList.add('active');
                });
            });
        });
    </script>
</body>
</html>