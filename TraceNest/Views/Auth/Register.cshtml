@model TraceNest.Dto.RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - Lost and Found</title>

    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .main-container {
            min-height: 100vh;
        }

        .hero-section {
            background-image: url('https://via.placeholder.com/1920x1080');
            background-size: cover;
            background-position: center;
            position: relative;
            border-radius: 10px;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                inset: 0;
                background-color: rgba(0, 0, 0, 0.4);
            }

        .welcome-card {
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            padding: 30px;
            border-radius: 10px;
            max-width: 500px;
            backdrop-filter: blur(5px);
        }

        .register-form {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            max-width: 450px;
        }

        .password-container {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            cursor: pointer;
            color: #6c757d;
        }

        .btn-primary {
            background-color: #212529;
            border: none;
        }

        .oauth-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: white;
            border: 1px solid #dee2e6;
            border-radius: 5px;
            padding: 10px;
            width: 100%;
            margin-bottom: 15px;
            font-weight: 500;
            text-decoration: none;
            color: #212529;
        }

            .oauth-btn:hover {
                background-color: #f1f1f1;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
            }

        .oauth-divider {
            display: flex;
            align-items: center;
            margin: 20px 0;
        }

            .oauth-divider::before,
            .oauth-divider::after {
                content: "";
                flex: 1;
                border-bottom: 1px solid #dee2e6;
            }

            .oauth-divider span {
                margin: 0 10px;
                color: #6c757d;
            }

        .text-danger ul {
            padding-left: 20px;
        }
    </style>
</head>
<body>
    <div class="container main-container py-5">
        <div class="row g-4 justify-content-center align-items-center">
            
            <div class="col-lg-6">
                <div class="hero-section d-flex align-items-center justify-content-center" style="min-height: 400px;">
                    <div class="welcome-card text-center">
                        <h2>Join Trace Nest!</h2>
                        <p>Start reporting or recovering lost items in just a few clicks. Sign up now to get started!</p>
                        <p class="mb-0">We're glad to have you here!</p>
                    </div>
                </div>
            </div>

           
            <div class="col-lg-5">
                <div class="register-form mx-auto">
                    <h2 class="text-center mb-4">Register</h2>

                    
                    <div class="oauth-buttons mb-3">
                        <a href="" class="oauth-btn">
                            <img src="https://res.cloudinary.com/djvap1ftu/image/upload/v1743851304/pngimg.com_-_google_PNG19635_zx2z7q.png" alt="Google" width="20" height="20" />
                            Sign up with Google
                        </a>
                    </div>

                    <div class="oauth-divider">
                        <span>OR</span>
                    </div>

                    
                    <form asp-action="Register" method="post">

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger mb-3">
                                <ul class="mb-0">
                                    @foreach (var modelState in ViewData.ModelState.Values)
                                    {
                                        foreach (var error in modelState.Errors)
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    }
                                </ul>
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">Full Name</label>
                            <input asp-for="UserName" class="form-control" placeholder="Enter your full name" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <div class="password-container">
                                <input asp-for="Password" class="form-control" type="password" placeholder="Create a password" />
                                <span class="password-toggle"><i class="fa fa-eye"></i></span>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <div class="password-container">
                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                                <span class="password-toggle"><i class="fa fa-eye"></i></span>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Register</button>
                    </form>

                    <div class="text-center mt-3">
                        <p>Already have an account? <a asp-action="Login">Log in</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        
        document.querySelectorAll('.password-toggle').forEach(function (toggle) {
            toggle.addEventListener('click', function () {
                const input = this.previousElementSibling;
                const icon = this.querySelector('i');
                if (input.type === 'password') {
                    input.type = 'text';
                    icon.classList.replace('fa-eye', 'fa-eye-slash');
                } else {
                    input.type = 'password';
                    icon.classList.replace('fa-eye-slash', 'fa-eye');
                }
            });
        });
    </script>
</body>
</html>